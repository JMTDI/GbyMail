<Window x:Class="GbyMail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GbyMail"
        mc:Ignorable="d"
        Title="GbyMail - Search &amp; Email Results" Height="800" Width="1200"
        WindowState="Maximized">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <TabControl x:Name="MainTabControl" SelectedIndex="{Binding SelectedTabIndex}">

            <!-- Search Tab -->
            <TabItem Header="🔍 Search">
                <Grid Margin="40,20,40,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,30">
                        <TextBlock Text="🔍" FontSize="72" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="GbyMail" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Search &amp; Email Results with Enhanced PDF Viewer (No Body Mode)" FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Main Search Section - Full Width -->
                    <Grid Grid.Row="1" Margin="0,20,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search Query Input Section -->
                        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,40">
                            <TextBlock Text="Enter Search Query" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                            <!-- Search ComboBox with History - Wider -->
                            <ComboBox x:Name="SearchComboBox" 
                                      Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding SearchHistory}"
                                      IsEditable="True"
                                      FontSize="18" Padding="15" Margin="0,0,0,30"
                                      KeyDown="SearchComboBox_KeyDown"
                                      ToolTip="Enter your search term and press Enter or click a search button (with search history)"
                                      MaxDropDownHeight="200"
                                      MinWidth="600"
                                      MaxWidth="900"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Search Platform Buttons - Full Width Grid -->
                        <Grid Grid.Row="1" Margin="0,0,0,40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="🌐 Google Search" Background="#4285F4" Foreground="White" 
                                   Margin="10" Padding="25,15" FontSize="16" FontWeight="Bold"
                                   Command="{Binding GoogleSearchCommand}"
                                   IsEnabled="{Binding IsSearchEnabled}"
                                   ToolTip="Search Google and email results (subject only)"
                                   VerticalAlignment="Stretch"/>

                            <Button Grid.Column="1" Content="🦆 DuckDuckGo Search" Background="#DE5833" Foreground="White" 
                                   Margin="10" Padding="25,15" FontSize="16" FontWeight="Bold"
                                   Command="{Binding DuckDuckGoSearchCommand}"
                                   IsEnabled="{Binding IsSearchEnabled}"
                                   ToolTip="Search DuckDuckGo and email results (subject only)"
                                   VerticalAlignment="Stretch"/>

                            <Button Grid.Column="2" Content="🛒 eBay Search" Background="#E53238" Foreground="White" 
                                   Margin="10" Padding="25,15" FontSize="16" FontWeight="Bold"
                                   Command="{Binding EbaySearchCommand}"
                                   IsEnabled="{Binding IsSearchEnabled}"
                                   ToolTip="Search eBay and email results (subject only)"
                                   VerticalAlignment="Stretch"/>

                            <Button Grid.Column="3" Content="📦 Amazon Search" Background="#FF9900" Foreground="Black" 
                                   Margin="10" Padding="25,15" FontSize="16" FontWeight="Bold"
                                   Command="{Binding AmazonSearchCommand}"
                                   IsEnabled="{Binding IsSearchEnabled}"
                                   ToolTip="Search Amazon and email results (subject only)"
                                   VerticalAlignment="Stretch"/>
                        </Grid>

                        <!-- Search History Management -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                            <TextBlock Text="Search History:" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <Button Content="🗑️ Clear History" 
                                   Margin="5" Padding="15,8" FontSize="14"
                                   Command="{Binding ClearSearchHistoryCommand}"
                                   IsEnabled="{Binding HasSearchHistory}"
                                   ToolTip="Clear all search history"/>
                            <TextBlock Text="{Binding SearchHistory.Count}" FontSize="12" Foreground="Gray" 
                                      VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBlock Text="items saved" FontSize="12" Foreground="Gray" 
                                      VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- Last Generated Email Info - Full Width -->
                        <Border Grid.Row="3" Background="#F5F5F5" Padding="25" Margin="0,0,0,20" CornerRadius="8"
                               Visibility="{Binding LastEmailVisibility}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Last Generated Email (No Body Mode)" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="To: " FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="auto@ibyfax.com" Foreground="Blue" FontSize="14"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="Subject:" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding GeneratedURL}" TextWrapping="Wrap" Foreground="Gray" FontSize="12" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8" HorizontalAlignment="Right">
                                        <TextBlock Text="Body: " FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="(Empty)" Foreground="Green" FontStyle="Italic" FontSize="14"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding LastSearchTime}" FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                                    <TextBlock Text="User: JMTDI" FontSize="10" Foreground="Gray" HorizontalAlignment="Right" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Quick Actions Section -->
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
                            <Button Content="📧 Go to Inbox" Padding="20,10" FontSize="14" Margin="10,0"
                                   Command="{Binding GoToInboxCommand}"
                                   Background="#6C757D" Foreground="White"/>
                            <Button Content="📁 Import PDF" Padding="20,10" FontSize="14" Margin="10,0"
                                   Command="{Binding ImportPdfCommand}"
                                   Background="#28A745" Foreground="White"/>
                            <Button Content="🔄 Refresh" Padding="20,10" FontSize="14" Margin="10,0"
                                   Command="{Binding RefreshCommand}"
                                   Background="#17A2B8" Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <!-- Footer -->
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="Developed by JMTDI" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Text="v2.3 Windows • 2025-08-12 19:15:28 UTC • Enhanced PDF Viewer Mode" FontSize="12" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Inbox Tab -->
            <TabItem Header="📧 Inbox">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header with import button -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Inbox (auto@ibyfax.com) - Enhanced PDF Mode" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="📁 Import PDF" Margin="8,0" Padding="15,8" FontSize="14"
                                       Command="{Binding ImportPdfCommand}"
                                       ToolTip="Import a PDF file to view with https:// link detection"/>
                                <Button Content="🔄 Refresh" Margin="8,0" Padding="15,8" FontSize="14"
                                       Command="{Binding RefreshCommand}"
                                       ToolTip="Refresh the inbox to check for new documents"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Email List or Empty State -->
                    <Grid Grid.Row="1">
                        <!-- Empty State -->
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Visibility="{Binding EmptyInboxVisibility}">
                            <TextBlock Text="📧" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                            <TextBlock Text="No emails received" FontSize="28" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                            <StackPanel MaxWidth="500">
                                <TextBlock Text="To view emails sent to auto@ibyfax.com:" 
                                          FontSize="16" Foreground="Gray" TextAlignment="Center" Margin="0,0,0,20"/>

                                <TextBlock Text="1. Import PDFs to view with full rendering" FontSize="14" Foreground="Gray" Margin="0,3"/>
                                <TextBlock Text="2. Click https:// links in PDFs (auto-email)" FontSize="14" Foreground="Gray" Margin="0,3"/>
                                <TextBlock Text="3. Use search buttons (subject only emails)" FontSize="14" Foreground="Gray" Margin="0,3"/>
                                <TextBlock Text="4. Search history is saved for convenience" FontSize="14" Foreground="Gray" Margin="0,3"/>

                                <Button Content="📁 Import PDF" Margin="0,25,0,0" Padding="20,12" FontSize="16"
                                       Command="{Binding ImportPdfCommand}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Email List -->
                        <ListView ItemsSource="{Binding ReceivedEmails}" 
                                 SelectedItem="{Binding SelectedEmail}"
                                 Visibility="{Binding EmailListVisibility}"
                                 Margin="15">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding From}" FontWeight="Bold" Foreground="Blue" FontSize="16"/>
                                                <TextBlock Text="{Binding Subject}" FontWeight="SemiBold" FontSize="15" Margin="0,3,0,0"/>
                                                <TextBlock Text="{Binding Body}" Foreground="Gray" FontSize="13" 
                                                          TextTrimming="CharacterEllipsis" Margin="0,8,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding FormattedDate}" FontSize="12" Foreground="Gray"/>
                                                <TextBlock Text="📎" FontSize="14" Foreground="Orange" 
                                                          Visibility="{Binding HasAttachmentVisibility}" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- PDF Viewer Tab -->
            <TabItem Header="📄 PDF Viewer">
                <Grid>
                    <!-- No PDF Selected State -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding NoPdfSelectedVisibility}">
                        <TextBlock Text="📄" FontSize="96" HorizontalAlignment="Center" Margin="0,0,0,35"/>
                        <TextBlock Text="Enhanced PDF Viewer" FontSize="32" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="Import a PDF to view it with automatic https:// link detection" FontSize="18" Foreground="Gray" 
                                  HorizontalAlignment="Center" Margin="0,0,0,35"/>

                        <StackPanel MaxWidth="600" Margin="0,0,0,35">
                            <Border Background="#E3F2FD" Padding="25" CornerRadius="10">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,8">
                                        <Ellipse Width="24" Height="24" Fill="Blue" Margin="0,0,15,0"/>
                                        <TextBlock Text="Full PDF rendering with native viewer" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,8">
                                        <Ellipse Width="24" Height="24" Fill="Green" Margin="0,0,15,0"/>
                                        <TextBlock Text="Click https:// links to auto-email them" FontSize="16" FontWeight="Bold"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,8">
                                        <Ellipse Width="24" Height="24" Fill="Orange" Margin="0,0,15,0"/>
                                        <TextBlock Text="Emails sent to auto@ibyfax.com" FontSize="16"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,8">
                                        <Ellipse Width="24" Height="24" Fill="Purple" Margin="0,0,15,0"/>
                                        <TextBlock Text="Subject only (no body content)" FontSize="16"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <StackPanel>
                            <Button Content="📁 Import PDF from Files" Padding="25,12" FontSize="18" FontWeight="Bold"
                                   Command="{Binding ImportPdfCommand}" Margin="0,0,0,15"/>
                            <Button Content="📧 Go to Inbox" Padding="20,10" FontSize="16"
                                   Command="{Binding GoToInboxCommand}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- PDF Viewer State -->
                    <Grid Visibility="{Binding PdfViewerVisibility}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#4285F4" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📄 Enhanced PDF Viewer with HTTPS Link Detection" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="{Binding SelectedPdfName}" FontSize="14" Foreground="LightGray"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="📧 Send File Link" Margin="0,0,12,0" Padding="12,8" FontSize="14"
                                           Command="{Binding SendPdfLinkCommand}"
                                           Background="White" Foreground="#4285F4"
                                           ToolTip="Send the PDF file path as an email (subject only)"/>
                                    <Button Content="🗂️ Open Folder" Margin="0,0,12,0" Padding="12,8" FontSize="14"
                                           Command="{Binding OpenPdfFolderCommand}"
                                           Background="White" Foreground="#4285F4"
                                           ToolTip="Open the folder containing this PDF"/>
                                    <Button Content="✕ Close" Padding="12,8" FontSize="14"
                                           Command="{Binding ClosePdfCommand}"
                                           Background="White" Foreground="#4285F4"
                                           ToolTip="Close the PDF viewer"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Instruction Banner -->
                        <Border Grid.Row="1" Background="#E8F5E8" Padding="20">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎯" Margin="0,0,12,0"/>
                                <TextBlock Text="ENHANCED PDF MODE: Click any https:// link in the PDF below to instantly open email composer with auto@ibyfax.com and the link as subject (no body) | User: JMTDI | 2025-08-12 19:15:28 UTC" 
                                          FontSize="14" Foreground="#2E7D32" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <!-- PDF Viewer Control -->
                        <local:PdfViewerControl Grid.Row="2" 
                                               PdfPath="{Binding SelectedPdfPath}"
                                               LinkClicked="PdfViewerControl_LinkClicked"/>
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>